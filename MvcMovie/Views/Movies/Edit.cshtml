@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Edit Movies";
}
<h1>Edit</h1>
<div class="row">
    <div class="col-md-4">
        <form action="/Movie/Edit/@Model.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">@Html.DisplayNameFor(modelItem => Model.Title)</label>
                <input asp-for="Title" class="form-control" value="@Model.Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label">@Html.DisplayNameFor(modelItem => Model.ReleaseDate)</label>
                <input asp-for="ReleaseDate" class="form-control" value="@Model.ReleaseDate"/>
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label">@Html.DisplayNameFor(modelItem => Model.Genre)</label>
                <input asp-for="Genre" class="form-control" value="@Model.Genre"/>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">@Html.DisplayNameFor(modelItem => Model.Price)</label>
                <input asp-for="Price" class="form-control" value="@Model.Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" href="javascript: history.go(-1)">Back to List</a>
</div>
    
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
